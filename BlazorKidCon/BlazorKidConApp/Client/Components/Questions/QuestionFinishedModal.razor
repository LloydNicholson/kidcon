
<MatDialog IsOpen="@DialogIsOpen">
    <MatDialogTitle>You've completed the questions!</MatDialogTitle>
    <MatDialogContent>

        @if (Score > 1 && Score <= 5)
        {
            <p>Ah, you achieved @Score / 10! Better luck next time!</p>
        }
        else if (Score > 5 && Score < 10)
        {
            <p>Well done, you achieved @Score / 10! Wow pretty good!</p>
        }
        else if (Score == 10)
        {
            <p>Amazing, you achieved @Score / 10! Brilliant</p>
        }
        else
        {
            <p>Wat gebeur!</p>
        }

    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="@(() => Restart.InvokeAsync(true))">Restart</MatButton>
        <MatButton OnClick="@(() => Restart.InvokeAsync(false))">Cancel</MatButton>
    </MatDialogActions>
</MatDialog>

@code {
    [Parameter]
    public int Score { get; set; }
    [Parameter]
    public bool DialogIsOpen { get; set; } = false;
    [Parameter]
    public EventCallback<bool> Restart { get; set; }
}
