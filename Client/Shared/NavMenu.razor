<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Kid Connect</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<MatNavMenu Class="@NavMenuCssClass" Style="color: white">
    <MatNavItem Href="" NavLinkMatch="NavLinkMatch.All">
        <MatIcon Icon="home" />&nbsp; Home
    </MatNavItem>
    <MatNavSubMenu @bind-Expanded="@navSubMenuOpenState">
        <MatNavSubMenuHeader>
            <MatNavItem Href="questions" AllowSelection="true"><MatIcon Icon="done_all"></MatIcon>&nbsp; Questions</MatNavItem>
        </MatNavSubMenuHeader>
        <MatNavSubMenuList>
            <MatNavItem Href="account-classification"> Account Classification</MatNavItem>
            <MatNavItem Href="debit-or-credit"> Debit or Credit</MatNavItem>
        </MatNavSubMenuList>
    </MatNavSubMenu>
    <MatNavItem Href="transactions"><MatIcon Icon="grade"></MatIcon>&nbsp; Transactions</MatNavItem>
</MatNavMenu>

@code {
    bool navSubMenuOpenState;
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
