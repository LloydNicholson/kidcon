@using ClientApp.Shared.Models

<div class="answered">
    @if (Correct)
    {
        <span><i class="thumb_up"></i></span>
        <div>
            Good work! The <strong>@(Account.Name)</strong> account is classified
            as a <strong>@(Account.Classification.Type) account</strong>.
        </div>
    }
    else
    {
        <span><i class="thumb_down"></i></span>
        <div>
            The <strong>@(Account.Name)</strong> account increases on the
            <strong>@(Account.IncreasingSide)</strong> side because it is classified
            as a <strong>@(Account.Classification.Type) account</strong>.
        </div>
    }
</div>

<div class="feedback">
    <h5>Score: @Score</h5>
    <h5>Questions answered: @QuestionCount /10</h5>
</div>

@code {
    [Parameter]
    public Account Account { get; set; }
    [Parameter]
    public bool Correct { get; set; }
    [Parameter]
    public int Score { get; set; }
    [Parameter]
    public int QuestionCount { get; set; }
}