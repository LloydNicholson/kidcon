@using ClientApp.Shared.Models

<MatCard>
    <MatCardContent Class="m-2">
        <div class="demo-mat-card-content">
            <MatHeadline6 class="demo-mat-card-clean-margin">
                @if (Correct)
                {
                    <span><MatIcon Icon="thumb_up"></MatIcon> That's correct!</span>
                }
                else
                {
                    <span><MatIcon Icon="thumb_down"></MatIcon> Incorrect.</span>
                }
            </MatHeadline6>
        </div>

        <MatBody1>
            @if (Correct)
            {
                <p>
                    The <strong>@(Account.Name)</strong> account is classified
                    as @(AOrAn()) <strong>@(Account.Classification.Type) account</strong>.
                </p>
            }
            else
            {
                <p>
                    The <strong>@(Account.Name)</strong> account increases on the
                    <strong>@(Account.IncreasingSide)</strong> side because it is classified
                    as @(AOrAn()) <strong>@(Account.Classification.Type) account</strong>.
                </p>
            }
        </MatBody1>
    </MatCardContent>

    @if (Time > 0)
    {
        <MatProgressBar @bind-Progress="Time"></MatProgressBar>
    }
</MatCard>

@code {
    [Parameter]
    public Account Account { get; set; }
    [Parameter]
    public bool Correct { get; set; }
    [Parameter]
    public int Score { get; set; }
    [Parameter]
    public int QuestionCount { get; set; }
    [Parameter]
    public double Time { get; set; }

    //protected override void OnAfterRender(bool firstRender)
    //{
    //    Console.WriteLine("After Render");
    //    Console.WriteLine(firstRender);
    //}

    public virtual string AOrAn()
    {
        if (Account.Classification.Type == "Asset" ||
            Account.Classification.Type == "Expense" ||
            Account.Classification.Type == "Income")
        {
            return "an";
        }
        return "a";
    }
}